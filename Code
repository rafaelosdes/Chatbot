            overflow: hidden;
        }

        .chat-box {
            max-height: 500px;
            overflow-y: auto;
            padding: 10px;
        }

        .chat-box .message {
            margin: 5px 0;
        }

        .chat-box .user {
            text-align: right;
        }

        .chat-box .bot {
            text-align: left;
        }

        #user-input {
            width: calc(100% - 80px);
